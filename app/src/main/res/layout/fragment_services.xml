<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/services_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/onyx"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/aristotelica_demibold"
                android:text="Services"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/services_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/services_title">

                <androidx.cardview.widget.CardView
                    android:id="@+id/washing_service"
                    android:layout_width="175dp"
                    android:layout_height="275dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:contentPadding="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/services_title">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/washing_machine_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/washing_machine_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="110dp"
                            android:textColor="@color/onyx"
                            android:fontFamily="@font/aristotelica"
                            android:text="Wash"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/washing_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/onyx"
                            android:layout_marginTop="130dp"
                            android:fontFamily="@font/exo_ligh"
                            android:text="For everyday items, includes wash and tumble-dry"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/wash_price_layout"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="190dp"
                            android:background="@drawable/rounded_corner3"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo"
                                android:text="£15 /KG"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow_icon" />

                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/iron_services"
                    android:layout_width="175dp"
                    android:layout_height="275dp"
                    android:layout_marginTop="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:contentPadding="20dp"
                    app:layout_constraintStart_toEndOf="@id/washing_service"
                    app:layout_constraintTop_toBottomOf="@+id/services_title">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iron_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/iron" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="110dp"
                            android:textColor="@color/onyx"
                            android:fontFamily="@font/aristotelica"
                            android:text="Iron"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/iron_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="130dp"
                            android:fontFamily="@font/exo_ligh"
                            android:text="For everyday items that are already clean"
                            android:textColor="@color/onyx"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/iron_price_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="190dp"
                            android:background="@drawable/rounded_corner3"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:fontFamily="@font/exo"
                                android:text="£1.20/Item"
                                android:textSize="14sp" />

                            <ImageView

                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingStart="5dp"
                                android:src="@drawable/right_arrow_icon" />

                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/services_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/services_layout1">


                <androidx.cardview.widget.CardView
                    android:id="@+id/dryclean_service"
                    android:layout_width="175dp"
                    android:layout_height="275dp"
                    android:layout_marginBottom="5dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:contentPadding="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/washing_service">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/dryclean_icon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/hanger" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="110dp"
                            android:fontFamily="@font/aristotelica"
                            android:text="Dry-Clean"
                            android:textColor="@color/onyx"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/dryclean_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="140dp"
                            android:fontFamily="@font/exo_ligh"
                            android:text="For more delicate fabrics"
                            android:textColor="@color/onyx"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/dryclean_price_layout"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="190dp"
                            android:background="@drawable/rounded_corner3"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/exo"
                                android:layout_height="wrap_content"
                                android:text="£2/Item"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow_icon" />

                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/wash_iron_services"
                    android:layout_width="175dp"
                    android:layout_height="275dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    app:contentPadding="20dp"
                    app:layout_constraintStart_toEndOf="@id/washing_service"
                    app:layout_constraintTop_toBottomOf="@+id/iron_services">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/wash_iron_img"
                            android:layout_width="200dp"
                            android:layout_height="250dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="130dp"
                            android:src="@drawable/wash_and_iron_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="100dp"
                            android:fontFamily="@font/aristotelica"
                            android:textColor="@color/onyx"
                            android:text="Wash and Iron"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/wash_iron_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="130dp"
                            android:fontFamily="@font/exo_ligh"
                            android:text="For everyday items that need both washing and ironing"
                            android:textColor="@color/onyx"
                            android:textAlignment="center"
                            android:textSize="12sp" />

                        <RelativeLayout
                            android:id="@+id/wash_iron_price_layout"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="190dp"
                            android:background="@drawable/rounded_corner3"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/exo"
                                android:text="£2/Item"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/right_arrow_icon" />

                        </RelativeLayout>
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</FrameLayout>