<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="LoginSignup.forget_password"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/makeSelection_back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/left_arrow"
            android:padding="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make selection"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:textAllCaps="true"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact details we should use to reset your password"
            android:textSize="20sp"/>

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:layout_marginTop="50dp"
           android:background="#f5f5f5"
           android:padding="10dp">

           <ImageView
               android:id="@+id/mobile_icon"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:src="@drawable/mobile_phone_icon"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"/>


           <TextView
               android:id="@+id/mobile_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Via SMS:"
               android:layout_marginTop="40dp"
               android:textSize="30sp"
               android:layout_toRightOf="@id/mobile_icon"/>


           <TextView
               android:id="@+id/mobile_desc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+447887396853"
               android:textColor="@color/black"
               android:textSize="30sp"
               android:layout_toRightOf="@id/mobile_icon"
               android:layout_below="@id/mobile_text"/>

           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/flag_transparent"/>


       </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="#f5f5f5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/mail_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mail_icon2"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>


            <TextView
                android:id="@+id/mail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Via Email:"
                android:layout_marginTop="40dp"
                android:textSize="30sp"
                android:layout_toRightOf="@id/mail_icon"/>


            <TextView
                android:id="@+id/mail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_text"
                android:layout_toRightOf="@id/mail_icon"
                android:text="support@gmail.com"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flag_transparent"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>